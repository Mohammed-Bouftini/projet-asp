@model projet_asp.Models.Admin

@{
    ViewBag.Title = "Create";
}
<body style="background-image: url(../../Assets/pexels-tim-samuel-5845024.jpg); background-size: 100%;">
    <h2>Formulaire de contact</h2>
    <div style="text-align: right; width: 80%;">
        <p style="color: white; font-size: 100%;">
            Une question ? Une suggestion ? Une demande spécifique ?
        </p>
    </div>
    <div style="text-align: right; width: 70%;">
        <p style="color: white; font-size: 100%;">
            Nous sommes à votre écoute !
        </p>
    </div>
    <div style="text-align: right; width: 75%;">
        <p style="color: white; font-size: 100%;">
            Vous pouvez à tout moment nous contacter,
        </p>
    </div>
    <div style="text-align: right; width: 80%;">
        <p style="color: white; font-size: 100%;">
            nous nous engageons à vous donner une réponse dans les 24h.
        </p>
    </div>
    <form>

        <label for="nom" style="margin-bottom: 5px; display: inline-block; width: 10%;">Nom :</label>
        <input type="text" id="nom" name="nom" required style="background-color: transparent;"><br><br>

        <label for="email" style="margin-bottom: 5px; display: inline-block; width: 10%;">Email :</label>
        <input type="email" id="email" name="email" required style="background-color: transparent;"><br><br>

        <label for="tel" style="margin-bottom: 5px; display: inline-block; width: 10%;">Téléphone :</label>
        <input type="tel" id="tel" name="tel" style="background-color: transparent;"><br><br>

        <label for="raison">Raison du contact :</label>
        <select id="raison" name="raison" style="background-color: transparent;">
            <option value="information">Demande d'information</option>
            <option value="autre">Autre</option>
        </select><br><br>

        <label for="message" style="margin-bottom: 5px; display: inline-block; width: 10%;">Message :</label>
        <textarea id="message" name="message" required style="background-color: transparent;"></textarea><br><br>

        <label for="contact-preference">Préférence de contact :</label><br>
        <input type="radio" id="email-preference" name="contact-preference" value="email" checked>
        <label for="email-preference">Email</label><br>
        <input type="radio" id="tel-preference" name="contact-preference" value="tel">
        <label for="tel-preference">Téléphone</label><br><br>

        <label for="heures-ouverture">Heures d'ouverture :</label><br>
        <p>L'école est ouverte du lundi au vendredi de 8h à 18h.</p>
        <p>Les demandes de contact seront traitées dans un délai de 24 à 48 heures pendant les heures d'ouverture.</p><br><br>

        <input type="submit" value="Envoyer">
    </form>

</body>
