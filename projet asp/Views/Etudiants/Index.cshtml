@model IEnumerable<projet_asp.Models.Etudiant>

@{
    ViewBag.Title = "Index";
}

<body style="background-image: url(../../Assets/pexels-buro-millennial-1438072.jpg); background-size: 100%; position: absolute; bottom: 40px; left: 25%; overflow: hidden; }">
    <div style="color: white; font-size: 50px; font-family: 'Times New Roman'; font-weight: bolder; position: absolute; top: -200px; text-align: center; width: 80%; margin-left: -15px; ">Bienvenu</div>
    <div class="jumbotron" style="background-color: transparent;">
        <br />
        <br />
        <p>
            <a style="background-color: aqua;">
                @Html.ActionLink("Les Notes","NoteEtudiant","Notes", null, new { @class = "btn btn-success btn-lg", @style = "background-color: transparent; font-size: 35px;" })
            </a>
        </p>
        @foreach (var item in Model)
        {
            if (User.Identity.IsAuthenticated)
            {
                if (User.Identity.Name == item.Email)
                {
                     @Html.ActionLink("Profil", "Details", new { id = item.Id }, new { @class = "btn btn-primary", style = "position: absolute; top: 50px; left: 50px;margin-left: -15px;" })
                }

            }
        }
    </div>
</body>
