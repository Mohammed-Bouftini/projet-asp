@model IEnumerable<projet_asp.Models.Etudiant>
@{
    ViewBag.Title = "Validé";
}

<h2>Validé</h2>
@using (Html.BeginForm("Recher", "Etudiants", FormMethod.Get))
{
    <p>
        Nom :
        <input type="text" name="searchQuery" placeholder="Rechercher" />
        <input type="submit" value="Rechercher"   />
    </p>
}
<table class="table table-bordered table-hover table-sm" size="xs">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MotDePasse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section.Groupe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Validé)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        if (item.Validé == true)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotDePasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section.Groupe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Validé)
                </td>
                <td>
                    @Html.ActionLink(projet_asp.Resources.ModelsResources.Etudiant.ResourceEtudiant.supacp, "NoDetail", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Html.ActionLink(projet_asp.Resources.MyResource.edit, "EditAdmin", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink(projet_asp.Resources.MyResource.details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink(projet_asp.Resources.MyResource.delete, "Dlt", new { id = item.Id }, new { @class = "btn btn-danger btn-delet" })
                </td>
            </tr>
        }
    }

</table>
<div>
    @Html.ActionLink(projet_asp.Resources.MyResource.back, "Index", "Admins", null, new { @class = "btn btn-default" })
</div>