@model IEnumerable<projet_asp.Models.Section>

@{
    ViewBag.Title = "Index";
}

<h2>Section</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Groupe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Groupe)
        </td>
        <td>
            @Html.ActionLink(projet_asp.Resources.MyResource.edit, "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink(projet_asp.Resources.MyResource.details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink(projet_asp.Resources.MyResource.delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-delet" })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink(projet_asp.Resources.MyResource.back, "Index", "Directeurs", null, new { @class = "btn btn-default" })
</div>